@{ 
    ViewData["title"] = "Cadastro";
}
@model Usuario;
<h1>Cadastrar Usuário</h1>

<form asp-action="EfetuarCadastro" method="post">
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input asp-for="@Model.Nome" type="text" id="nome" class="form-control"/>
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Gênero:</label>
        <select asp-for="@Model.Genero" asp-items="@Html.GetEnumSelectList<Genero>()" class="form-control">
            <option value="" selected disabled>Selecione...</option>
        </select>
        <span asp-validation-for="@Model.Genero" class="text-danger"></span>
    </div>
    <button type="submit">Cadastrar</button>
</form>