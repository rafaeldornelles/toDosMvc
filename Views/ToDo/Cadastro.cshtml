@model CadastroToDoViewModel

    <h1>Cadastro de Tarefa</h1>
    <form asp-action="EfetuarCadastro" method="post">
        <div class="form-group">
            <label for="titulo">Título:</label>
            <input asp-for="@Model.ToDo.Titulo" id="titulo" class="form-control"/>
            <span asp-validation-for="@Model.ToDo.Titulo" class="text-danger"></span>
        </div>        
        
        <div class="form-group">
            <label for="conteudo">Conteúdo:</label>
            <textarea asp-for="@Model.ToDo.Conteudo" id="conteudo" class="form-control"></textarea>
            <span asp-validation-for="@Model.ToDo.Conteudo" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="@Model.ToDo.DataCriacao" class="form-control"/>

        <div class="form-group">
            <label for="status">Status:</label>
            <select asp-for="@Model.ToDo.Status" asp-items="Html.GetEnumSelectList<ToDoStatus>()" class="form-control">
                <option value="" selected disabled>Selecione...</option>
            </select>
            <span asp-validation-for="@Model.ToDo.Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="usuario">Usuario:</label>
            <select asp-for="@Model.ToDo.UsuarioId" asp-items="@Model.UsuarioItems()" class="form-control"   >
                <option value="" selected disabled>Selecione...</option>
            </select>
            <span asp-validation-for="@Model.ToDo.UsuarioId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar</button>

    </form>

